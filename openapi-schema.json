{
  "openapi": "3.0.2",
  "info": {
    "title": "LIDO-TIKU API",
    "version": "0.1",
    "description": "API for accessing traffic measurement data of the city of Helsinki",
    "license": {
      "name": "MIT License",
      "identifier": "MIT"
    }
  },
  "paths": {
    "/api/counters/": {
      "get": {
        "operationId": "listCounters",
        "description": "Lists measurement devices or sensors which produce observational data.",
        "parameters": [
          {
            "name": "latitude",
            "required": false,
            "in": "query",
            "description": "latitude",
            "schema": {
              "type": "number",
              "format": "float"
            }
          },
          {
            "name": "longitude",
            "required": false,
            "in": "query",
            "description": "longitude",
            "schema": {
              "type": "number",
              "format": "float"
            }
          },
          {
            "name": "distance",
            "required": false,
            "in": "query",
            "description": "Distance in kilometers, how far can a counter be from the defined point.",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Counter"
                  }
                }
              },
              "text/csv": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Counter"
                  }
                }
              }
            },
            "description": ""
          }
        },
        "tags": [
          "api"
        ]
      },
      "post": {
        "operationId": "createCounter",
        "description": "Lists counters within the given GeoJSON polygon area.",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$schema": "http://json-schema.org/draft-07/schema#",
                "$id": "https://geojson.org/schema/Polygon.json",
                "title": "GeoJSON Polygon",
                "type": "object",
                "required": [
                  "type",
                  "coordinates"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "Polygon"
                    ]
                  },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "minItems": 4,
                      "items": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  "bbox": {
                    "type": "array",
                    "minItems": 4,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              },
              "examples": {
                "polygon": {
                  "summary": "Query with GeoJSON Polygon",
                  "value": {
                    "type": "Polygon",
                    "coordinates": [
                      [
                        [
                          24.5,
                          60.2
                        ],
                        [
                          24.5,
                          60.9
                        ],
                        [
                          24.8,
                          60.9
                        ],
                        [
                          24.8,
                          60.2
                        ],
                        [
                          24.5,
                          60.2
                        ]
                      ]
                    ]
                  }
                }
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/CounterFilterValidation"
              }
            },
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/CounterFilterValidation"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Counter"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "api"
        ]
      }
    },
    "/api/counters/{id}/": {
      "get": {
        "operationId": "retrieveCounter",
        "description": "Returns the information of a counter with the given identifier.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "A unique value identifying this counter.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "latitude",
            "required": false,
            "in": "query",
            "description": "latitude",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "longitude",
            "required": false,
            "in": "query",
            "description": "longitude",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "distance",
            "required": false,
            "in": "query",
            "description": "Distance in kilometers, how far can a counter be from the defined point.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Counter"
                }
              },
              "text/csv": {
                "schema": {
                  "$ref": "#/components/schemas/Counter"
                }
              }
            },
            "description": ""
          }
        },
        "tags": [
          "api"
        ]
      }
    },
    "/api/observations/": {
      "get": {
        "operationId": "listObservations",
        "description": "Returns a paged and sorted list of observations produced by counters,\nmatching the given search criteria.",
        "parameters": [
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "A page number within the paginated result set.",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page_size",
            "required": false,
            "in": "query",
            "description": "Number of results to return per page.",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "counter",
            "required": false,
            "in": "query",
            "description": "Counter id, the device(s) that produced the observations.             Separate values with commas if you intend to query with multiple counters.",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "examples": {
              "counter_multiple": {
                "summary": "Multiple counters",
                "value": "1,23,79"
              },
              "single": {
                "summary": "Single counter",
                "value": "83"
              }
            }
          },
          {
            "name": "start_date",
            "required": false,
            "in": "query",
            "description": "Start date of measurement period.",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "examples": {
              "start_date": {
                "summary": "Date format",
                "value": "2023-01-31"
              }
            }
          },
          {
            "name": "end_date",
            "required": false,
            "in": "query",
            "description": "End date of measurement period.",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "examples": {
              "end_date": {
                "summary": "Date format",
                "value": "2023-01-31"
              }
            }
          },
          {
            "name": "measurement_type",
            "required": false,
            "in": "query",
            "description": "Type of measurement, often either `speed` or `count`.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "source",
            "required": false,
            "in": "query",
            "description": "Data source.             Possible choices: EcoCounter, FinTraffic, HEL LAM, InfoTripla & Marksman.             Please note that the choices might not be up to date.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order",
            "required": false,
            "in": "query",
            "description": "Sort order for the results.             For example ascending = `datetime`, descending = `-datetime`.                Multiple filters can be combined by separating with comma.",
            "schema": {
              "type": "string",
              "enum": [
                "datetime",
                "-datetime",
                "counter",
                "-counter"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer",
                      "example": 123
                    },
                    "next": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=4"
                    },
                    "previous": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=2"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Observation"
                      }
                    }
                  }
                }
              },
              "text/csv": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer",
                      "example": 123
                    },
                    "next": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=4"
                    },
                    "previous": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=2"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Observation"
                      }
                    }
                  }
                }
              }
            },
            "description": ""
          }
        },
        "tags": [
          "api"
        ]
      }
    },
    "/api/observations/aggregate/": {
      "get": {
        "operationId": "listObservationsAggregate",
        "description": "Returns a paged and sorted list of the observational data,\naggregated over the given period and matching the search criteria.",
        "parameters": [
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "A page number within the paginated result set.",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page_size",
            "required": false,
            "in": "query",
            "description": "Number of results to return per page.",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "counter",
            "required": true,
            "in": "query",
            "description": "Counter id, aggregates observations of selected counter.",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "examples": {
              "counter_multiple": {
                "summary": "Multiple counters",
                "value": "1,23,79"
              },
              "single": {
                "summary": "Single counter",
                "value": "83"
              }
            }
          },
          {
            "name": "start_date",
            "required": false,
            "in": "query",
            "description": "Start date of measurement period.",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "examples": {
              "start_date": {
                "summary": "Date format",
                "value": "2023-01-31"
              }
            }
          },
          {
            "name": "end_date",
            "required": false,
            "in": "query",
            "description": "End date of measurement period.",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "examples": {
              "end_date": {
                "summary": "Date format",
                "value": "2023-01-31"
              }
            }
          },
          {
            "name": "period",
            "required": true,
            "in": "query",
            "description": "Defines how long the aggregation period is.",
            "schema": {
              "type": "string",
              "enum": [
                "hour",
                "day",
                "month",
                "year"
              ]
            }
          },
          {
            "name": "measurement_type",
            "required": true,
            "in": "query",
            "description": "Type of measurement, often either `speed` or `count`.             Determines whether to use sum or average for aggregation.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order",
            "required": false,
            "in": "query",
            "description": "Sort order for the results. Ascending = `start_time`, descending = `-start_time`.",
            "schema": {
              "type": "string",
              "enum": [
                "start_time",
                "-start_time"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer",
                      "example": 123
                    },
                    "next": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=4"
                    },
                    "previous": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=2"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ObservationAggregate"
                      }
                    }
                  }
                }
              },
              "text/csv": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer",
                      "example": 123
                    },
                    "next": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=4"
                    },
                    "previous": {
                      "type": "string",
                      "nullable": true,
                      "format": "uri",
                      "example": "http://api.example.org/accounts/?page=2"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ObservationAggregate"
                      }
                    }
                  }
                }
              }
            },
            "description": ""
          }
        },
        "tags": [
          "api"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "CounterFilterValidation": {
        "type": "object",
        "properties": {
          "longitude": {
            "type": "number"
          },
          "latitude": {
            "type": "number"
          },
          "distance": {
            "type": "number"
          }
        }
      },
      "Counter": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "maximum": 2147483647,
            "minimum": -2147483648
          },
          "name": {
            "type": "string",
            "maxLength": 32
          },
          "classifying": {
            "type": "boolean"
          },
          "crs_epsg": {
            "type": "integer",
            "maximum": 9223372036854775807,
            "minimum": -9223372036854775808,
            "format": "int64"
          },
          "source": {
            "type": "string",
            "maxLength": 32
          },
          "geometry": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "Point"
                ]
              },
              "coordinates": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {
                  "type": "number",
                  "format": "float"
                }
              }
            },
            "readOnly": true
          }
        },
        "required": [
          "id",
          "name",
          "classifying",
          "crs_epsg",
          "source"
        ]
      },
      "Observation": {
        "type": "object",
        "properties": {
          "typeofmeasurement": {
            "type": "string",
            "maxLength": 32
          },
          "phenomenondurationseconds": {
            "type": "integer",
            "maximum": 9223372036854775807,
            "minimum": -9223372036854775808,
            "format": "int64"
          },
          "vehicletype": {
            "type": "string",
            "maxLength": 32
          },
          "direction": {
            "type": "string",
            "maxLength": 32
          },
          "unit": {
            "type": "string",
            "maxLength": 8
          },
          "value": {
            "type": "integer",
            "maximum": 9223372036854775807,
            "minimum": -9223372036854775808,
            "format": "int64"
          },
          "datetime": {
            "type": "string",
            "format": "date-time"
          },
          "source": {
            "type": "string",
            "maxLength": 32
          },
          "counter": {
            "type": "string"
          },
          "counter_id": {
            "type": "string",
            "readOnly": true
          }
        },
        "required": [
          "typeofmeasurement",
          "phenomenondurationseconds",
          "vehicletype",
          "direction",
          "unit",
          "datetime",
          "source",
          "counter"
        ]
      },
      "ObservationAggregate": {
        "type": "object",
        "properties": {
          "period": {
            "type": "string"
          },
          "counter_id": {
            "type": "string",
            "readOnly": true
          },
          "start_time": {
            "type": "string",
            "format": "date-time"
          },
          "direction": {
            "type": "string",
            "maxLength": 32
          },
          "unit": {
            "type": "string"
          },
          "aggregated_value": {
            "type": "string",
            "readOnly": true
          }
        },
        "required": [
          "period",
          "start_time",
          "direction",
          "unit"
        ]
      }
    }
  }
}